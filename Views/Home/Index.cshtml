@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12 text-center">
        <h1>@Model.Category.Name</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Categories</h2>
        
        @foreach(ProductCategory prod in @Model.Category.ProductCategory){
            @prod.Product.Name
            @:<br/>
        }
    </div>
    <div class="col-md-6">
        <form action="/" method="POST">
            <input type="hidden" name="CategoryId" value="@Model.Category.CategoryId" />
            Add Category:<br/>
            <select name="ProductId" >
                @foreach(Product prod in @Model.Products){
                    @:<option value="@prod.ProductId
                    @:">
                    @prod.Name
                    @:</option>
                }
            </select>
            <input type="submit" value="Add" />
        </form>
    </div>
</div>